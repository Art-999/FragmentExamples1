<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_liner_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/landscape_mode_fragment"
        android:name="com.example.arturmusayelyan.fragmentexamples1.LandscapeModeFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/portraite_mode_fragment"
        android:name="com.example.arturmusayelyan.fragmentexamples1.PortraiteModeFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

    </fragment>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</RelativeLayout>